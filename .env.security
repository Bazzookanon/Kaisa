# Security Configuration Instructions

# Add these lines to your .env file for enhanced security:

# Google reCAPTCHA Configuration
RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here

# Session Security
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# Rate Limiting
RATE_LIMIT_LOGIN_ATTEMPTS=5
RATE_LIMIT_DECAY_MINUTES=15

# Account Lockout
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# Security Headers
SECURITY_HEADERS_ENABLED=true

# Logging
LOG_SECURITY_EVENTS=true
LOG_FAILED_LOGINS=true

# Two-Factor Authentication (Optional)
2FA_ENABLED=false
2FA_ISSUER=YourAppName

# Password Requirements
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true

# Instructions:
# 1. Get reCAPTCHA keys from https://www.google.com/recaptcha/admin
# 2. Replace 'your_recaptcha_site_key_here' and 'your_recaptcha_secret_key_here' with actual keys
# 3. Set SESSION_SECURE_COOKIE=true only if using HTTPS
# 4. Adjust rate limiting and lockout settings as needed for your application